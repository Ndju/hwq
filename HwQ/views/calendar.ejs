		        	for (var i = 0; i<clientEvents.length;i++){
				    	var clientMonth = (clientEvents[i]["start"].month()+1);
					    var clientDate = (clientEvents[i]["start"].date());
					    var clientYear = (clientEvents[i]["start"].year());
